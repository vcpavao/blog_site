<%include partials/header%>
<div class="ui raised very padded text container main-body">
    <div class="ui huge header">Edit <%=post.title%></div>
    <form class="ui form" action="/blogs/<%=post._id%>?_method=PUT" method="POST">
        <div class="field"><label>Title</label><input type="text" name="post[title]" value="<%=post.title%>"></div>
        <div class="field"><label>Image</label><input type="text" name="post[image]" value="<%=post.image%>"</div>
        <div class="field"><label>Body</label><textarea name="post[body]"><%=post.body%></textarea></div>
        <input class="ui blue basic button" type="submit">
    </form>
</div>
<%include partials/footer%>